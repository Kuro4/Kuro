<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KuroCustomControlsTests"
             xmlns:KuroCustomControls="clr-namespace:KuroCustomControls;assembly=KuroCustomControls" x:Class="KuroCustomControlsTests.UserControlForDesign"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <KuroCustomControls:NumericUpDownControl x:Name="PART_Hour" MaxValue="23" MinValue="0" IsReadOnly="False" IsLoop="True" TextBoxWidth="5*" ButtonWidth="3*"/>
        <Label Content=":" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <KuroCustomControls:NumericUpDownControl x:Name="PART_Minute" Grid.Column="2" MaxValue="59" MinValue="0" IsLoop="True" IsReadOnly="False" ButtonWidth="3*" TextBoxWidth="5*"/>

    </Grid>
</UserControl>
